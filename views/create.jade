extends layout

block content
    h2 Create new poll
    body.form
        include ./chart.jade
        form(action="/create", method="post")
           div
                label(for="title") Poll title:
                input#title(type="text", name="title", ng-model="chart.title", autofocus="true", required="true")
            div
                label(for="option1") Option:
                input#option1(type="text", name="option1", ng-model="chart.option1", required="true")
            div
                label(for="option2") Option:
                input#option2(type="text", name="option2", ng-model="chart.option2", )
            div
                label(for="option3") Option:
                input#option3(type="text", name="option3", ng-model="chart.option3", )
            div
                label(for="option4") Option:
                input#option4(type="text", name="option4", ng-model="chart.option4", )
            div
                button.button.btn.btn-success(type="button") Add more options
                button.button.btn.btn-success(type="submit") Create
              
